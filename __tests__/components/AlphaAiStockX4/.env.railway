# Railway Environment Configuration for AlphaAI StockX
# Eliminates build script warnings and optimizes deployment

NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
NPM_CONFIG_LEGACY_PEER_DEPS=true
PNPM_CONFIG_AUTO_INSTALL_PEERS=true
PNPM_CONFIG_STRICT_PEER_DEPENDENCIES=false

# Build optimization
NEXT_BUILD_WORKER_MAX_MEMORY=8192
NODE_OPTIONS=--max-old-space-size=8192

# Railway-specific optimizations
RAILWAY_STATIC_URL=""
PORT=3000

# Database (if using Railway PostgreSQL)
# DATABASE_URL will be automatically set by Railway

# Disable unnecessary logs during build
NPM_CONFIG_FUND=false
NPM_CONFIG_AUDIT=false

# Auto-approve build scripts
PNPM_CONFIG_SCRIPTS_APPROVAL=auto
